---
import Heading from "../atom/Heading.astro"
import SubHeading from "../atom/SubHeading.astro"
import { CASE_STUDIES } from "../../content/case-studies"
import ChevronRight from "astro-heroicons/outline/ChevronRight.astro"
import BookPropsal from "./BookPropsal.astro"
import CaseStudy from "./CaseStudy.astro"
---
<section class="bg-[url('https://blupp.b-cdn.net/openthrive/bg-dark.svg')] bg-top bg-center bg-black">
    <div class="py-20 max-w-7xl mx-auto container">
        <div class="flex flex-col justify-center text-center">
            <Heading
                text="Case Studies"
            />
            <SubHeading
                text="Here is how we have transformed B2B websites & marketing into a digital experience that drives people to the sales pipeline."
            />
        </div>
        <div class="pt-10 grid grid-cols-3 gap-6">
            {

                CASE_STUDIES.map( ( study ) => {

                    return (
                        <CaseStudy
                            cover={ study.cover }
                            company={ study.company }
                            description={ study.description }
                        />
                    )

                })

            }
        </div>
    </div>
</section>
<section class="bg-white h-px w-full"/>
<section>
    <BookPropsal />
</section>
